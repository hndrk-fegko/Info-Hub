# Info-Hub Security & Access Rules
# Apache 2.4+

# ===== Rewrite Engine =====
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Wenn keine index.html existiert:
    # 1. Prüfe ob setup.php noch existiert -> Setup
    # 2. Sonst -> Login (Admin muss erst veröffentlichen)
    RewriteCond %{REQUEST_URI} ^/$
    RewriteCond %{DOCUMENT_ROOT}/index.html !-f
    RewriteCond %{DOCUMENT_ROOT}/backend/setup.php -f
    RewriteRule ^$ /backend/setup.php [L,R=302]
    
    RewriteCond %{REQUEST_URI} ^/$
    RewriteCond %{DOCUMENT_ROOT}/index.html !-f
    RewriteCond %{DOCUMENT_ROOT}/backend/setup.php !-f
    RewriteRule ^$ /backend/login.php [L,R=302]
</IfModule>

# ===== General Security =====
# Disable directory browsing
Options -Indexes

# Prevent access to hidden files
<FilesMatch "^\.">
    Require all denied
</FilesMatch>

# ===== Protect Backend Data =====
# Block direct access to JSON data files
<FilesMatch "\.(json)$">
    Require all denied
</FilesMatch>

# Block access to log files
<FilesMatch "\.(log)$">
    Require all denied
</FilesMatch>

# ===== CORS Headers (if needed) =====
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set X-XSS-Protection "1; mode=block"
</IfModule>

# ===== Compression =====
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/css application/javascript application/json
</IfModule>

# ===== Caching for Static Assets =====
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/webp "access plus 1 month"
    ExpiresByType text/css "access plus 1 week"
    ExpiresByType application/javascript "access plus 1 week"
</IfModule>
